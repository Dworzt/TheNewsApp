<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Theme -->
    <style name="Theme.TheNewsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#BB86FC</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#000000</item>

        <!-- Surface colors -->
        <item name="colorSurface">#2C2C2C</item>
        <item name="colorOnSurface">#FFFFFF</item>

        <!-- Background colors -->
        <item name="android:colorBackground">#121212</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorSecondaryVariant">#03DAC5</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">#3700B3</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- NoActionBar theme for dark mode -->
    <style name="Theme.TheNewsApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#BB86FC</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSurface">#2C2C2C</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="android:colorBackground">#121212</item>
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorSecondaryVariant">#03DAC5</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:statusBarColor" tools:targetApi="l">#3700B3</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
</resources>